---
import ProtectedLayout from "../layouts/ProtectedLayout.astro";
import DiscoverView from "../components/views/DiscoverView.tsx";
---

<ProtectedLayout title="Discover New Metal Music">
  <main>
    <div class="container mx-auto px-4 py-8 max-w-6xl">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Discover New Metal</h1>
        <p class="text-gray-600">
          Describe what you love about a track from your library, and let AI find your next favorite song.
        </p>
      </div>
      <DiscoverView client:load />
    </div>
  </main>
</ProtectedLayout>
