---
import Layout from "../layouts/Layout.astro";
import AuthFormContainer from "../components/auth/AuthFormContainer.tsx";
import UpdatePasswordForm from "../components/auth/UpdatePasswordForm.tsx";

export const prerender = false;

// In PKCE flow, user is automatically authenticated after clicking reset link
// No need to extract or validate tokens manually
---

<Layout title="Update Password - MetalPathfinder">
  <AuthFormContainer title="Update Password" description="Enter your new password below." client:load>
    <UpdatePasswordForm client:load />
  </AuthFormContainer>
</Layout>
